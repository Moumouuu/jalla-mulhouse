// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int        @id @default(autoincrement())
  title       String
  description String
  createdAt   DateTime   @default(now())
  colors      Color[]
  pictures    Picture[]
  height      Height[]
  new         Boolean    @default(false)
  selected    Boolean    @default(false)
  visible     Boolean    @default(true)
  promotion   Promotion? @relation(fields: [promotionId], references: [id])
  promotionId Int?
  menu        Int?
}

model Picture {
  id        Int      @id @default(autoincrement())
  url       String
  product   Product? @relation(fields: [productId], references: [id])
  productId Int?
  General   General? @relation(fields: [generalId], references: [id])
  generalId Int?
}

model Color {
  id        Int      @id @default(autoincrement())
  hex       String
  product   Product? @relation(fields: [productId], references: [id])
  productId Int?
}

model Height {
  id        Int      @id @default(autoincrement())
  height    String
  product   Product? @relation(fields: [productId], references: [id])
  productId Int?
  price     Int
}

model Promotion {
  id        Int       @id @default(autoincrement())
  name      String
  discount  Int       @unique
  launchDay DateTime  @default(now())
  endDay    DateTime?
  products  Product[]
}

model General {
  id                   Int       @id @default(autoincrement())
  promoteMessage       String?
  promoteMessageMobile String?
  about                String?
  hour                 String?
  carrousel            Picture[]
}

model Menu {
  id              Int              @id @default(autoincrement())
  name            String
  subMenu         SubMenu[]
  createdAt       DateTime         @default(now())
  catalogAndVideo CatalogAndVideo?
}

model CatalogAndVideo {
  id         Int    @id @default(autoincrement())
  urlVideo   String
  urlCatalog String
  // one to one with Menu
  menu       Menu   @relation(fields: [menuId], references: [id])
  menuId     Int    @unique
}

model SubMenu {
  id         Int       @id @default(autoincrement())
  name       String
  fatherMenu Menu      @relation(fields: [menuId], references: [id])
  menuId     Int
  terMenu    TerMenu[]
}

model TerMenu {
  id         Int     @id @default(autoincrement())
  name       String
  fatherMenu SubMenu @relation(fields: [menuId], references: [id])
  menuId     Int
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}
